#: import Window kivy.core.window.Window

<CEFPopup@ModalView>:
    browser: browser
    size_hint: None, None
    size: Window.width*0.8, Window.height*0.8
    border: 0,0,0,0
    background_color: 0,0,0,0.2
    background: "images/black.png"
    border: 0,0,0,0
    title: "-"
    url: ""
    auto_dismiss: False
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        BoxLayout:
            size_hint_y: None
            height: 35
            canvas.before:
                Color:
                    rgba: .7, .7, 0.7, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text: root.title
                color: 0,0,0,1
            Button:
                text: "X"
                size_hint_x: None
                width: self.height
                on_press:
                    root.dismiss()
        PopupBrowser:
            id: browser
            url: root.url